{% extends 'base.html.twig' %}

{% block title %}Hello VoyageOrgController!{% endblock %}

{% block body %}
    {% if voyages == NULL %}
    <h1> no voyage organiser here</h1>
    {% endif %}
    <h1> liste des voyages organisé </h1>
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th scope="col">from</th>
            <th scope="col">to</th>
            <th scope="col">date aller</th>
            <th scope="col">date retour</th>
            <th scope="col">details</th>
            <th scope="col">Delete</th>
        </tr>
        </thead>
        <tbody>
        {% for voyage in voyages %}

            <tr>
                <td>{{ voyage.getVoy().getFromVille() }}</td>
                <td>{{ voyage.getVoy().getToVille() }}</td>

                <td>{{ voyage.getVoy().getDateAller()|date("d/m/Y") }}</td>

                <td>{{ voyage.getVoy().getDateRetour()|date("d/m/Y") }}</td>
                <td><a href="{{ path('details_voyorg' , {id:voyage.getId()}) }}" class="btn btn-outline-success btn-sm"> details </a> </td>
                <td><a href="#" class="btn btn-outline-danger btn-sm">supprimer</a></td>
            </tr>

        {% endfor %}
        </tbody>
    </table>
    <center> <a href="/admin/voyage/org/ajoute" class="btn btn-primary"> ajouter une voyage organisé</a></center>
{% endblock %}
