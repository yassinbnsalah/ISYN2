{% extends 'base.html.twig' %}

{% block title %}Hello{% endblock %}

{% block body %}

<h1><center>liste des AEROPORTS</center> </h1>
<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th scope="col">id</th>
        <th scope="col">nom</th>
        <th scope="col">ville</th>
        <th scope="col"> supprimer </th>
        <th scope="col"> modify </th>
    </tr>
    </thead>
    <tbody>
     {% for aeroport in aeroports %}
         <tr>
             <th scope="row">{{ aeroport.getId() }}</th>
             <th scope="row">{{ aeroport.getNom() }}</th>
             <th scope="row">{{ aeroport.getVille() }}</th>
             <th scope="row"><a href="{{ path ('delete_aeroport' , {id: aeroport.getId()}) }}" class="btn btn-danger btn-sm"> DELETE </a></th>
             <th scope="row"><a href="{{ path ('update_aeroport' , {id: aeroport.getId()}) }}" class="btn btn-info btn-sm"> MODIFY </a></th>
         </tr>
     {% endfor %}
    </tbody>
</table>
    <center><a href="{{path('new_aeroport') }}" class="btn btn-success"> ajouter aeroport </a></center>
{% endblock %}
